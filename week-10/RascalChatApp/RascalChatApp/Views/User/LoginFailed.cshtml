@using RascalChatApp.Models.ViewModels
@model UserViewModel

@{
    Layout = "_Layout";
}

<div class="login">
    <h1>Incorrect user name or password, please try again.</h1>
</div>
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="input-container">
        @Html.Label("Username:")
        @Html.TextBox("login")
    </div>

    <div class="input-container">
        @Html.Label("Password:")
        @Html.Password("password")
    </div>

    <input type="submit" value="Login" />
}